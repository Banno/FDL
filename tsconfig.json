{
    "exclude":[
        "**/node_modules",
        "**/*.test.js",
        "**/*.config.js",
        "**/dist",
        "**/_references.js",
        "**/Scripts",
        "**/coverage",
     ],
     "compilerOptions":{
        "target":"es2020",
        "module":"commonjs",
        "moduleResolution":"node",
        "allowJs":true,
        "checkJs":false,
        "declaration":false,
        "emitDeclarationOnly":false,
        "sourceMap":true,
        "esModuleInterop":true,
        "forceConsistentCasingInFileNames":true,
        "strict":true,
        "skipLibCheck":true,
        "experimentalDecorators":true,
        "emitDecoratorMetadata":true,
        "useDefineForClassFields": false,
     }
}